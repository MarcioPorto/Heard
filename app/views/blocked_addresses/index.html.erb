<p id="notice"><%= notice %></p>

<h1>Listing Blocked Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Ip address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocked_addresses.each do |blocked_address| %>
      <tr>
        <td><%= blocked_address.ip_address %></td>
        <td><%= link_to 'Show', blocked_address %></td>
        <td><%= link_to 'Edit', edit_blocked_address_path(blocked_address) %></td>
        <td><%= link_to 'Destroy', blocked_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blocked address', new_blocked_address_path %>
